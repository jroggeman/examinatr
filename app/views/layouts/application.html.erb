<!DOCTYPE html>
<html>
<head>
  <title>Examinatr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primary-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Examinatr', root_path, class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse" id="primary-navbar">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li><%= link_to 'Exams', exams_path %></li>
          <% else %>
            <li><%= link_to 'Login', login_path %></li>
          <% end %>
        </ul>

        <form class="nav navbar-nav navbar-form navbar-right">
          <% if current_user %>
              <%= link_to 'Logout', logout_path, class: 'btn btn-primary' %>
          <% else %>
              <%= link_to 'Login', login_path, class: 'btn btn-primary' %>
          <% end %>
        </form>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>

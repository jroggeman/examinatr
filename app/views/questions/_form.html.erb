<%= form_for [@exam, @question] do |f| %>
  <%= f.label :points %>
  <%= f.number_field :points, class: 'form-control' %>

  <br>

  <%= f.label :text %>
  <%= f.text_area:text, class: 'form-control' %>

  <br>

  <div class="form-group">
  <% if @question.number > 1 %>
    <%= link_to "Previous", previous_question_path(@exam, @question), class: 'btn btn-primary' %>
  <% else %>
    <button class="btn btn-primary" disabled="disabled">Previous</button>
  <% end %>

  <%= f.submit "Save", class: 'btn btn-success' %>

  <% if @question.number < @exam.questions.count %>
    <%= link_to "Next", next_question_path(@exam, @question), class: 'btn btn-primary' %>
  <% elsif @question.number == @exam.questions.count %>
    <%= link_to "New", new_exam_question_path(@exam), class: 'btn btn-primary' %>
  <% else %>
    <button class="btn btn-primary" diabled="disabled">New</button>
  <% end %>
  </div>

  <%= link_to "Back to exams", exam_path(@exam), class: 'btn btn-primary' %>
<% end %>

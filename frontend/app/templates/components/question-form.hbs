<h1>New question</h1>
<form {{action "createQuestion" on="submit"}}>
    <div class="form-group">
        <label for="{{concat elementId '-points'}}">Points</label>
        {{input id=(concat elementId '-points') type="number" name="points" value=points placeholder="5" class="form-control"}}
    </div>
    <div class="form-group">
        <label for="{{concat elementId '-text'}}">Text</label>
        {{textarea id=(concat elementId '-text') name="text" value=text placeholder="What is the capital of Assyria?" class="form-control"}}
    </div>
    <div class="form-group">
        <label for="{{concat elementId '-answer'}}">Answer</label>
        {{textarea id=(concat elementId '-answer') name="answer" value=answer placeholder="I don't know that!" class="form-control"}}
    </div>
    <button class="btn btn-success btn-block">Add Question</button>
</form>

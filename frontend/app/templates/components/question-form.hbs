<h1>New question</h1>
<form {{action "createQuestion" on="submit"}}>
    <div class="form-group">
        <label for="points">Points</label>
        {{input type="number" name="points" value=points placeholder="5" class="form-control"}}
    </div>
    <div class="form-group">
        <label for="text">Text</label>
        {{textarea name="text" value=text placeholder="What is the capital of Assyria?" class="form-control"}}
    </div>
    <div class="form-group">
        <label for="answer">Answer</label>
        {{textarea name="answer" value=answer placeholder="I don't know that!" class="form-control"}}
    </div>
    <button class="btn btn-success btn-block">Add Question</button>
</form>

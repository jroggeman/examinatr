<div class="col-md-3">
    <h1>Exams</h1>

    <ul class="list-group">
        <li class="list-group-item">
            {{input type="text" class="new-exam" placeholder="New exam" value=name}}
            <button class="btn btn-primary btn-sm new-exam-button" {{action
            "createExam"}}>Add</button>
        </li>
        {{#each model as |exam|}}
            {{#link-to "exams.show" exam class="list-group-item"}}{{exam.name}}{{/link-to}}
        {{/each}}
    </ul>
</div>
{{outlet}}
